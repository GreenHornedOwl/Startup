mixin contentBox(content, title, buttonText, image)
	if content == 'banner'
		a(href='#')
			if title				
				img(src='http://placehold.it/#{title}')
			else
				img(src='http://placehold.it/370x370/FAFAFA/000000')		
	else
		if title
			h3.title
				a(href='#')= title
		if image				
				img(src='http://placehold.it/#{image}')
			else
				img(src='http://placehold.it/370x370/FAFAFA/000000')		
		div.content
			if block
				block
		if buttonText
			a.button(href='#')= buttonText

mixin product-list(arg)
	-var i = 0
	for product in products		
		if (i < arg)
			-i=i+1
			.item
				.product-box
					a(href='product.html')
						img(src='http://placehold.it/370x370/FAFAFA/000000' class='product-image img-responsive')
						span.product-title #{product.name} 
						span.product-price #{product.promo} <sup> RON </sup>
						span.product-old-price #{product.price} <sup> RON </sup>
						span.product-button= cta
mixin filter-size()
	for product in products
		li
			a(href='#') #{product.size}
mixin variant-size()
	for variant in variantSize.size
		li 			
			a(href='#' data-role='variant') #{variant}
mixin variant-color()
	select
		for variant in variantColor.color
			option(value='#{variant}') #{variant}				
mixin variant()
	for item in variant.color
		li 			
			a(href='#' data-role='variant') #{item}
mixin related()
	for item in relatedProducts.related
		.related-item
			a(href='#')
				img(src='http://placehold.it/300x300/FAFAFA/000000')
				span #{item}

	
